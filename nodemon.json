{
  "watch": [
    "src",
    "public/templates"
  ],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules",
    "dist",
    "coverage",
    "public/shares/**",
    "public/shares/**/*",
    "**/public/shares/**"
  ],
  "exec": "node --max-old-space-size=6144 node_modules/@nestjs/cli/bin/nest.js start",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true,
  "restartable": "rs",
  "colours": true
}


